# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=bravocars
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
CONNECTION_STRING=Host=localhost;Port=5432;Database=bravocars;Username=postgres;Password=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_CONNECTION_STRING=localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ISSUER=BravoCars
JWT_AUDIENCE=BravoCarsAPI
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_EXPIRY_DAYS=7

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@bravocars.com
EMAIL_FROM_NAME=BravoCars Auction Platform

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5142

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Admin User (Seed Data)
ADMIN_EMAIL=admin@bravocars.com
ADMIN_PASSWORD=Admin@123456
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Auction Settings
MINIMUM_BID_INCREMENT=100
AUCTION_PAYMENT_DEADLINE_DAYS=7

# Logging
SERILOG_MINIMUM_LEVEL=Information
